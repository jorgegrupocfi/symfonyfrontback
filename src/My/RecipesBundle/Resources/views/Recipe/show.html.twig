{% extends '::base.html.twig' %}

{% block title %}{{ recipe.name }}{% endblock %}

{% block body %}

	<h1>{{recipe.name}}</h1>
	<p>{{ recipe.description }}</p>
	<h2>Por {{author.name}} {{author.surname}} </h2>
	<h3>Ingredientes</h3>
	<ul>
		{% for ingredient in recipe.ingredients %}
			<li>{{ ingredient.name }}</li>
		{% endfor %}
	</ul>
	
	
{% endblock %}